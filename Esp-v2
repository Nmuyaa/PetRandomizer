-- VARIABLES
local canClick = true
local cooldownRemaining = 0
local autoReroll = false

-- REROLL BUTTON
local RunService = game:GetService("RunService")
local Debris = game:GetService("Debris")

local lastRerollTime = 0
local cooldownTime = 5
local isCoolingDown = false

-- Store ESP cooldown labels
local cooldownLabels = {}

-- Create ESP timer label function
local function showCooldownLabel(egg, timeLeft)
	if not egg:FindFirstChild("CooldownLabel") then
		local label = Instance.new("BillboardGui", egg)
		label.Name = "CooldownLabel"
		label.Size = UDim2.new(0, 100, 0, 40)
		label.StudsOffset = Vector3.new(0, 2, 0)
		label.AlwaysOnTop = true

		local text = Instance.new("TextLabel", label)
		text.Size = UDim2.new(1, 0, 1, 0)
		text.BackgroundTransparency = 1
		text.TextColor3 = Color3.new(1, 1, 0)
		text.TextScaled = true
		text.Font = Enum.Font.Arcade
		text.Text = string.format("%.2fs", timeLeft)

		cooldownLabels[egg] = text
	else
		local text = egg.CooldownLabel:FindFirstChildOfClass("TextLabel")
		if text then
			text.Text = string.format("%.2fs", timeLeft)
		end
	end
end

-- Remove ESP label
local function hideCooldownLabel(egg)
	if egg:FindFirstChild("CooldownLabel") then
		egg.CooldownLabel:Destroy()
		cooldownLabels[egg] = nil
	end
end

-- Do pet prediction reroll
local function rerollEggs()
	-- Your existing reroll logic here
	for _, egg in pairs(workspace:GetDescendants()) do
		if collectionService:HasTag(egg, "Egg") then
			local eggType = egg:GetAttribute("EggType") or "Common Egg"
			local pets = eggChances[eggType]
			if pets then
				local roll = math.random() * 100
				local total = 0
				for name, chance in pairs(pets) do
					total += chance
					if roll <= total then
						egg:SetAttribute("PredictedPet", name)
						break
					end
				end
			end
		end
	end
end

-- Manual reroll button
predict.MouseButton1Click:Connect(function()
	if tick() - lastRerollTime >= cooldownTime then
		lastRerollTime = tick()
		rerollEggs()
	end
end)

-- Main loop that updates every frame
RunService.RenderStepped:Connect(function()
	local now = tick()
	local timeLeft = cooldownTime - (now - lastRerollTime)

	if timeLeft > 0 then
		isCoolingDown = true
		for _, egg in pairs(workspace:GetDescendants()) do
			if collectionService:HasTag(egg, "Egg") then
				showCooldownLabel(egg, timeLeft)
			end
		end
	else
		if isCoolingDown then
			-- Hide cooldowns once over
			for egg, _ in pairs(cooldownLabels) do
				hideCooldownLabel(egg)
			end
			isCoolingDown = false
		end
	end

	-- Auto reroll check
	if autoReroll and timeLeft <= 0 then
		lastRerollTime = tick()
		rerollEggs()
	end
end)

-- AUTO REROLL BUTTON (below)
local autoBtn = Instance.new("TextButton", frame)
autoBtn.Size = UDim2.new(0, 220, 0, 30)
autoBtn.Position = UDim2.new(0.5, -110, 0, 92)
autoBtn.BackgroundColor3 = Color3.fromRGB(90, 60, 90)
autoBtn.TextColor3 = Color3.new(1, 1, 1)
autoBtn.Font = Enum.Font.Arcade
autoBtn.TextSize = 14
autoBtn.Text = "Auto Reroll: OFF"
Instance.new("UICorner", autoBtn).CornerRadius = UDim.new(0, 4)

autoBtn.MouseButton1Click:Connect(function()
    autoReroll = not autoReroll
    autoBtn.Text = "Auto Reroll: " .. (autoReroll and "ON" or "OFF")
end)

-- AUTO REROLL LOGIC
task.spawn(function()
    while true do
        task.wait(1)
        if autoReroll and canClick then
            predict:MouseButton1Click()
        end
    end
end)

