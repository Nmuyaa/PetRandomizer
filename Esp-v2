local function updateESPCountdown()
    for _, data in pairs(displayedEggs) do
        if data and data.label and data.currentPet then
            data.label.Text = string.format("%s | %s (%ds)", data.eggName, data.currentPet, cooldown)
        end
    end
end

-- REROLL BUTTON
local predict = Instance.new("TextButton", frame)
predict.Size = UDim2.new(0, 220, 0, 36)
predict.Position = UDim2.new(0.5, -110, 0, 50)
predict.BackgroundColor3 = Color3.fromRGB(60, 90, 60)
predict.TextColor3 = Color3.new(1, 1, 1)
predict.Font = Enum.Font.Arcade
predict.TextSize = 16
predict.Text = "✨ Reroll Egg"
Instance.new("UICorner", predict).CornerRadius = UDim.new(0, 4)

predict.MouseButton1Click:Connect(function()
    if not canClick then return end
    canClick = false

    for _, data in pairs(displayedEggs) do
        local newPet = getPetForEgg(data.eggName)
        if data.label then
            data.label.Text = string.format("%s | %s (%ds)", data.eggName, newPet, cooldown)
        end
        data.currentPet = newPet
    end

    -- countdown with milliseconds that hides after
local runService = game:GetService("RunService")

task.spawn(function()
    local remaining = cooldown
    while remaining > 0 do
        task.wait(0.05)
        remaining -= 0.05

        for _, data in pairs(displayedEggs) do
            if data and data.label then
                data.label.Text = string.format("%s | %s (%.2fs)", data.eggName, data.currentPet, math.max(remaining, 0))
            end
        end
    end
    canClick = true

    -- Remove cooldown text after it ends
    for _, data in pairs(displayedEggs) do
        if data and data.label and data.currentPet then
            data.label.Text = string.format("%s | %s", data.eggName, data.currentPet)
        end
    end
end)

